#4
DELIMITER //
CREATE Function order_days
(
	order_id_param INT
) 
RETURNS INT
BEGIN
DECLARE days_var INT;
select datediff(shipped_date,order_date)
into days_var
from orders
where order_id =order_id_param;

RETURN days_var;

END //
DELIMITER ;

select order_days(29);
